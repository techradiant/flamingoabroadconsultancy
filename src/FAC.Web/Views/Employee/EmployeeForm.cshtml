@model FAC.Web.ViewModels.EmployeeViewModel
@{
    ViewBag.Title = "EmployeeForm";
}

<!-- Start main-content -->
<section class="page-title" style="background-image: url(../media/images/background/page-title.jpg);">
    <div class="auto-container">
        <div class="title-outer">
            <h1 class="title">Employee Form</h1>
            <ul class="page-breadcrumb">
                <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "" })</li>
                <li>@Html.ActionLink("Employee", "Index", "Employee", new { area = "" }, new { @class = "" })</li>
                <li>Employee Form</li>
            </ul>
        </div>
    </div>
</section>
<!-- end main-content -->



    <section class="">
        <div class="container">
            <div class="row">
                @using (@Html.BeginForm("Save", "Employee"))
                {
                    <div class="form-group form-control">
                        @Html.LabelFor(m => m.Employee.EmployeeName)
                        @Html.EditorFor(m => m.Employee.EmployeeName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Employee.EmployeeName)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Employee.EmployeeDesignation)
                        @Html.TextBoxFor(m => m.Employee.EmployeeDesignation, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Employee.EmployeeDesignation)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Employee.EmployeeAddress)
                        @Html.TextBoxFor(m => m.Employee.EmployeeAddress, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Employee.EmployeeAddress)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Employee.EmployeePhone)
                        @Html.TextBoxFor(m => m.Employee.EmployeePhone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Employee.EmployeePhone)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Employee.EmployeeGender)
                        @Html.TextBoxFor(m => m.Employee.EmployeeGender, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Employee.EmployeeGender)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Employee.City)
                        @Html.TextBoxFor(m => m.Employee.City, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Employee.City)
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(m => m.Employee.CompanyName)
                        @Html.TextBoxFor(m => m.Employee.CompanyName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Employee.CompanyName)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Employee.PinCode)
                        @Html.TextBoxFor(m => m.Employee.PinCode, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Employee.PinCode)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Employee.EmployeeDiscription)
                        @Html.TextBoxFor(m => m.Employee.EmployeeDiscription, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Employee.EmployeeDiscription)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Employee.DepartmentId)
                        @Html.DropDownListFor(m => m.Employee.DepartmentId, new SelectList(Model.Department, "DepartmentId", "DepartmentName"), "Select Department", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Employee.DepartmentId)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Employee.ProfilePhotoUrl)
                        @Html.TextBoxFor(m => m.Employee.ProfilePhotoUrl, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Employee.ProfilePhotoUrl)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Employee.IncludeInTeamList)
                        @Html.TextBoxFor(m => m.Employee.IncludeInTeamList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Employee.IncludeInTeamList)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Employee.TeamListViewOrder)
                        @Html.TextBoxFor(m => m.Employee.TeamListViewOrder, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Employee.TeamListViewOrder)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Employee.TwitterUrl)
                        @Html.TextBoxFor(m => m.Employee.TwitterUrl, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Employee.TwitterUrl)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Employee.FacebookUrl)
                        @Html.TextBoxFor(m => m.Employee.FacebookUrl, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Employee.FacebookUrl)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Employee.InstagramUrl)
                        @Html.TextBoxFor(m => m.Employee.InstagramUrl, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Employee.InstagramUrl)
                    </div>
                    @Html.HiddenFor(m => m.Employee.EmployeeId)

                    var c = @Model.Employee.EmployeeId > 0 ? "Update" : "Save";
                    <button type="submit" class="btn btn-primary">@c</button>
                }
            </div>
            </div>
</section>


      

